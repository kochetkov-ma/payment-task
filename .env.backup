# Payment System Environment Variables

# Database Configuration - Payment Backend
PAYMENT_DB_HOST=payment-postgres
PAYMENT_DB_PORT=5432
PAYMENT_DB_NAME=payment_db
PAYMENT_DB_USER=payment_user
PAYMENT_DB_PASSWORD=payment_password

# Database Configuration - Balance Service
BALANCE_DB_HOST=balance-postgres
BALANCE_DB_PORT=5432
BALANCE_DB_NAME=balance_db
BALANCE_DB_USER=balance_user
BALANCE_DB_PASSWORD=balance_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_INTERNAL_SERVERS=kafka:29092
KAFKA_EXTERNAL_SERVERS=localhost:9092
ZOOKEEPER_CONNECT=zookeeper:2181

# Kafka Topics
KAFKA_TOPIC_PAYMENT_HOLD_REQUEST=payment-hold-request
KAFKA_TOPIC_PAYMENT_HOLD_RESPONSE=payment-hold-response

# Service Ports
PAYMENT_BACKEND_PORT=8080
BALANCE_SERVICE_PORT=8081
WIREMOCK_PORT=8082

# WireMock Configuration
WIREMOCK_HOST=wiremock
WIREMOCK_URL=http://wiremock:8080

# External Service URLs (for callback testing)
PAYMENT_CALLBACK_URL=http://wiremock:8080/payment/callback
BALANCE_SERVICE_URL=http://balance-postgres:8081

# Security Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_PAYMENT=DEBUG
LOG_LEVEL_BALANCE=DEBUG

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5

# Postgres Configuration
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Volume Configuration
POSTGRES_PAYMENT_DATA_PATH=./docker/volumes/payment-postgres
POSTGRES_BALANCE_DATA_PATH=./docker/volumes/balance-postgres
KAFKA_DATA_PATH=./docker/volumes/kafka
ZOOKEEPER_DATA_PATH=./docker/volumes/zookeeper